---
import NavigationLinks from '../../components/NavigationLinks.astro'
import ScenesDisplay from '../../components/ScenesDisplay.astro'
import StackY from '../../components/StackY.astro'
import {
  atTheLowestPoint,
  flimpsy,
  miniBlackStrands,
  notGood,
  sadge,
} from '../../images'
import Layout from '../../layouts/Layout.astro'

const navLinks = { back: './part3', forward: './part5' }

const scenes = [
  { src: atTheLowestPoint, description: 'At his lowest point.' },
  { src: flimpsy, description: '' },
  { src: miniBlackStrands, description: 'The mojo is gone.' },
  { src: notGood, description: '' },
  { src: sadge, description: 'Nothing can satisfy him now.' },
]
---

<Layout titleExtra="Part 4">
  <StackY>
    <NavigationLinks links={navLinks} />

    <ScenesDisplay scenes={scenes} />

    <NavigationLinks links={navLinks} />
  </StackY>
</Layout>
