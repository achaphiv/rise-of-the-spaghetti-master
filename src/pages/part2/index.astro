---
import NavigationLinks from '../../components/NavigationLinks.astro'
import ScenesDisplay from '../../components/ScenesDisplay.astro'
import StackY from '../../components/StackY.astro'
import {
  arrival,
  blackStuffBehind,
  closeUp,
  distantExplosion,
  explosion,
  hanging,
  landing,
  mirrorBreaking,
  notYours,
  showOff,
  stillFalling,
  swingingAround,
  theBestMeal,
} from '../../images'
import Layout from '../../layouts/Layout.astro'

const navLinks = { back: './part1', forward: './part3' }

const scenes = [
  {
    src: showOff,
    description:
      'But without an suitable enemy to fight, what use was such strength?',
  },
  { src: stillFalling, description: 'Work was still difficult.' },
  {
    src: theBestMeal,
    description: 'Fortunately, his favorite meal was still comforting.',
  },
  { src: notYours, description: "You can't have any." },
  { src: distantExplosion, description: 'And then suddenly..' },
  { src: explosion, description: 'What was that?' },
  { src: closeUp, description: 'It was time.' },
  { src: hanging, description: '' },
  { src: swingingAround, description: 'Is that spiderman?' },
  { src: landing, description: '' },
  { src: arrival, description: '' },
  { src: mirrorBreaking, description: '' },
  { src: blackStuffBehind, description: '' },
]
---

<Layout titleExtra="Part 2">
  <StackY>
    <NavigationLinks links={navLinks} />

    <ScenesDisplay scenes={scenes} />

    <NavigationLinks links={navLinks} />
  </StackY>
</Layout>
